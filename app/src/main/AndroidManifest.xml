<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.perrigogames.life4trials">

    <application
        android:name=".Life4Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">

        <activity
            android:name=".activity.LaunchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.FirstRunInfoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.PlacementListActivity"
            android:screenOrientation="portrait"
            android:label="@string/placements"/>
        <activity android:name=".activity.FirstRankSelectionActivity"
            android:screenOrientation="portrait"
            android:label="@string/select_a_rank"/>

        <activity android:name=".activity.PlayerProfileActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity android:name=".activity.RankListActivity"
            android:screenOrientation="portrait"
            android:label="@string/available_ranks"/>
        <activity android:name=".activity.RankDetailsActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.PlacementDetailsActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.TrialListActivity"
            android:label="@string/trials"
            android:parentActivityName=".activity.PlayerProfileActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.TrialDetailsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.SongEntryActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".activity.TrialRecordsActivity"
            android:label="@string/title_activity_records"
            android:screenOrientation="portrait" />

        <activity android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.BlockListCheckActivity"
            android:label="@string/ignored_songs"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.SongUnlockActivity"
            android:label="@string/song_unlocks"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.CreditsActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".activity.SongRecordsListCheckActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="ID_UPDATES_CHANNEL" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${providerName}"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <receiver
            android:name=".util.NotificationCopyHandler"
            android:enabled="true">
            <intent-filter>
                <action android:name="ACTION_COPY_CLIPBOARD" />
            </intent-filter>
        </receiver>
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-permission android:name="android.permission.INTERNET" />

    <dist:module dist:instant="true" />

</manifest>