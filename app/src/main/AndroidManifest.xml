<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".Life4Application"
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LaunchActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.profile.PlayerProfileActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.profile.RankListActivity"
            android:label="@string/available_ranks"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.profile.RankDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.firstrun.PlacementDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.trial.TrialListActivity"
            android:label="@string/trials"
            android:parentActivityName=".activity.profile.PlayerProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.trial.TrialDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.trial.SongEntryActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activity.trial.TrialRecordsActivity"
            android:label="@string/title_activity_records"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.settings.TrialJacketTestActivity"
            android:exported="false"
            android:label="@string/title_activity_trial_jacket_test" />
        <activity
            android:name=".activity.base.BlockListCheckActivity"
            android:label="@string/ignored_songs"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.settings.SongUnlockActivity"
            android:label="@string/song_unlocks"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.settings.CreditsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.base.SongRecordsListCheckActivity"
            android:screenOrientation="portrait" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${providerName}"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <receiver
            android:name="com.perrigogames.life4.android.util.NotificationCopyHandler"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="ACTION_COPY_CLIPBOARD" />
            </intent-filter>
        </receiver>
    </application>

</manifest>