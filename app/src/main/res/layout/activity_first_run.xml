<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.perrigogames.life4trials.activity.FirstRunActivity">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/content_padding_large"
        android:fontFamily="@font/avenir"
        android:gravity="center"
        android:text="@string/welcome_to_life4"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/text_greetings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/text_greetings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/content_padding_large"
        android:layout_marginEnd="@dimen/content_padding_large"
        android:layout_marginBottom="@dimen/content_padding_huge"
        android:gravity="center"
        android:text="@string/life4_intro_greeting"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/text_option_new"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title"/>

    <TextView
        android:id="@+id/text_option_new"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/content_padding_large"
        android:layout_marginEnd="@dimen/content_padding_large"
        android:drawableLeft="@drawable/ic_scroll_arrow_to_right"
        android:gravity="center"
        android:padding="@dimen/content_padding_large"
        android:text="@string/life4_intro_new_player"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/text_option_familiar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_greetings"/>

    <TextView
        android:id="@+id/text_response_new"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/life4_intro_new_player_response"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/text_option_new"
        app:layout_constraintEnd_toEndOf="@id/text_option_new"
        app:layout_constraintStart_toStartOf="@id/text_option_new"
        app:layout_constraintTop_toTopOf="@id/text_option_new"/>

    <TextView
        android:id="@+id/text_option_familiar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/content_padding_large"
        android:layout_marginEnd="@dimen/content_padding_large"
        android:drawableLeft="@drawable/ic_scroll_arrow_to_right"
        android:gravity="center"
        android:padding="@dimen/content_padding_large"
        android:text="@string/life4_intro_familiar"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/text_option_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_option_new"/>

    <TextView
        android:id="@+id/text_response_familiar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/life4_intro_familiar_response"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/text_option_familiar"
        app:layout_constraintEnd_toEndOf="@id/text_option_familiar"
        app:layout_constraintStart_toStartOf="@id/text_option_familiar"
        app:layout_constraintTop_toTopOf="@id/text_option_familiar"/>

    <TextView
        android:id="@+id/text_option_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/content_padding_large"
        android:layout_marginEnd="@dimen/content_padding_large"
        android:drawableLeft="@drawable/ic_scroll_arrow_to_right"
        android:gravity="center"
        android:onClick="onOptionSelected"
        android:padding="@dimen/content_padding_large"
        android:text="@string/life4_intro_member"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_option_familiar"/>

    <TextView
        android:id="@+id/text_response_login"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/life4_intro_member_response"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/text_option_login"
        app:layout_constraintEnd_toEndOf="@id/text_option_login"
        app:layout_constraintStart_toStartOf="@id/text_option_login"
        app:layout_constraintTop_toTopOf="@id/text_option_login"/>
</androidx.constraintlayout.widget.ConstraintLayout>
