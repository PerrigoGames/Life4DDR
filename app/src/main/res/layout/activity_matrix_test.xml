<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.perrigogames.life4trials.activity.MatrixTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:id="@+id/layout_rank_header"
            layout="@layout/view_rank_header"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <com.perrigogames.life4trials.view.ProgressMatrixView
            android:id="@+id/layout_progress_matrix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/content_padding_large"
            android:layout_marginLeft="@dimen/content_padding_large"
            android:layout_marginEnd="@dimen/content_padding_huge"
            android:layout_marginRight="@dimen/content_padding_huge" />
    </LinearLayout>
</ScrollView>
