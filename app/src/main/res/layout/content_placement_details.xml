<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_details"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/button_finalize"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.perrigogames.life4trials.view.RankImageView
                android:id="@+id/image_rank"
                android:layout_width="@dimen/placement_details_rank_size"
                android:layout_height="@dimen/placement_details_rank_size"
                android:layout_marginTop="@dimen/content_padding_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/gold_3"/>

            <ImageButton
                android:id="@+id/button_navigate_previous"
                android:layout_width="@dimen/size_detail_nav_debug"
                android:layout_height="@dimen/size_detail_nav_debug"
                android:layout_margin="@dimen/content_padding_med"
                android:alpha="0.5"
                android:background="@null"
                android:onClick="navigationButtonClicked"
                android:scaleType="fitXY"
                android:src="@drawable/ic_scroll_arrow_to_left"
                android:textStyle="bold"
                android:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/image_rank"
                app:layout_constraintEnd_toStartOf="@id/image_rank"
                app:layout_constraintTop_toTopOf="@id/image_rank" />

            <ImageButton
                android:id="@+id/button_navigate_next"
                android:layout_width="@dimen/size_detail_nav_debug"
                android:layout_height="@dimen/size_detail_nav_debug"
                android:layout_margin="@dimen/content_padding_med"
                android:alpha="0.5"
                android:background="@null"
                android:onClick="navigationButtonClicked"
                android:scaleType="fitXY"
                android:src="@drawable/ic_scroll_arrow_to_right"
                android:textStyle="bold"
                android:tint="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/image_rank"
                app:layout_constraintStart_toEndOf="@id/image_rank"
                app:layout_constraintTop_toTopOf="@id/image_rank" />

            <TextView
                android:id="@+id/text_rank_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content_padding_large"
                android:gravity="center"
                android:textSize="32sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_rank"
                tools:text="GOLD"/>

            <TextView
                android:id="@+id/text_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content_padding_large"
                android:text="@string/placement_description"
                app:layout_constraintBottom_toTopOf="@id/container_song_list_fragment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_rank_title"/>

            <FrameLayout
                android:id="@+id/container_song_list_fragment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_description"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/image_camera_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="@dimen/content_padding_med"
        android:contentDescription="@string/icon"
        android:src="@drawable/ic_photo_camera"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/switch_acquire_mode"
        app:layout_constraintEnd_toStartOf="@id/switch_acquire_mode"
        app:layout_constraintTop_toTopOf="@id/switch_acquire_mode" />

    <Switch
        android:id="@+id/switch_acquire_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/content_padding_med"
        android:layout_marginRight="@dimen/content_padding_med"
        android:layout_marginBottom="@dimen/content_padding_med"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_finalize"
        app:layout_constraintEnd_toStartOf="@id/image_folder_icon" />

    <ImageView
        android:id="@+id/image_folder_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_margin="@dimen/content_padding_med"
        android:contentDescription="@string/icon"
        android:src="@drawable/ic_file_folder"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/switch_acquire_mode"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/switch_acquire_mode"/>

    <Button
        android:id="@+id/button_finalize"
        style="@style/BottomProgressButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onFinalizeClick"
        android:text="@string/finalize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>