<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.perrigogames.life4trials.view.RankImageView
        android:id="@+id/image_rank_icon"
        android:layout_width="@dimen/rank_goal_icon_size"
        android:layout_height="@dimen/rank_goal_icon_size"
        android:layout_margin="@dimen/content_padding_med"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/bronze_1"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_goal_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/content_padding_med"
        android:lines="1"
        android:textSize="@dimen/text_large"
        app:autoSizeMinTextSize="14sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/image_rank_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_rank_icon"
        app:layout_constraintTop_toTopOf="@id/image_rank_icon"
        tools:text="BRONZE 1" />

    <TextView
        android:id="@+id/text_goals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/content_padding_med"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_rank_icon"
        tools:text="T\nT\nT\nT\nT\nT\nT\nT\nT"/>

</androidx.constraintlayout.widget.ConstraintLayout>