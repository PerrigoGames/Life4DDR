<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_jacket_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/record_difficulty_end_margin"
        android:layout_marginRight="@dimen/record_difficulty_end_margin"
        android:alpha="0.3"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/colorAccent" />

    <TextView
        android:id="@+id/text_record_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/content_padding_large"
        android:layout_marginLeft="@dimen/content_padding_large"
        android:layout_marginEnd="@dimen/content_padding_large"
        android:layout_marginRight="@dimen/content_padding_large"
        android:gravity="end"
        android:lines="2"
        app:layout_constraintBottom_toBottomOf="@id/image_rank_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_rank_icon"
        tools:text="04/20/2710" />

    <com.perrigogames.life4trials.view.RankImageView
        android:id="@+id/image_rank_icon"
        android:layout_width="@dimen/record_rank_icon_size"
        android:layout_height="@dimen/record_rank_icon_size"
        android:layout_margin="@dimen/content_padding_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        tools:src="@drawable/cobalt_3"/>

    <TextView
        android:id="@+id/text_record_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/content_padding_med"
        android:layout_marginLeft="@dimen/content_padding_med"
        android:layout_marginEnd="@dimen/content_padding_med"
        android:layout_marginRight="@dimen/content_padding_med"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/text_ex_score"
        app:layout_constraintEnd_toStartOf="@id/text_record_date"
        app:layout_constraintStart_toEndOf="@id/image_rank_icon"
        app:layout_constraintTop_toTopOf="@id/image_rank_icon"
        tools:text="Heartbreak"/>

    <TextView
        android:id="@+id/text_ex_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/image_rank_icon"
        app:layout_constraintEnd_toStartOf="@id/text_record_date"
        app:layout_constraintStart_toStartOf="@id/text_record_title"
        app:layout_constraintTop_toBottomOf="@id/text_record_title"
        tools:text="1560/2000 EX"/>

    <ProgressBar
        android:id="@+id/progress_ex_score"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/content_padding_med"
        android:layout_marginEnd="@dimen/content_padding_large"
        android:layout_marginRight="@dimen/content_padding_large"
        android:theme="@style/ProgressBarStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/text_ex_score"
        app:layout_constraintTop_toBottomOf="@id/text_ex_score"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_record_label_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_padding_med"
        android:layout_marginEnd="@dimen/content_padding_large"
        android:layout_marginRight="@dimen/content_padding_large"
        android:gravity="end"
        android:lines="1"
        android:textStyle="bold"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@id/guideline_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_ex_score"
        tools:text="Song A"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_record_label_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_padding_med"
        android:layout_marginEnd="@dimen/content_padding_large"
        android:layout_marginRight="@dimen/content_padding_large"
        android:gravity="end"
        android:lines="1"
        android:textStyle="bold"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@id/guideline_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_record_label_1"
        tools:text="Song B"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_record_label_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_padding_med"
        android:layout_marginEnd="@dimen/content_padding_large"
        android:layout_marginRight="@dimen/content_padding_large"
        android:gravity="end"
        android:lines="1"
        android:textStyle="bold"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@id/guideline_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_record_label_2"
        tools:text="Song 123456"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_record_label_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/content_padding_med"
        android:layout_marginEnd="@dimen/content_padding_large"
        android:layout_marginRight="@dimen/content_padding_large"
        android:layout_marginBottom="@dimen/content_padding_large"
        android:gravity="end"
        android:lines="1"
        android:textStyle="bold"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_record_label_3"
        tools:text="AAAAAAAAAAAAAAAAAAAAAA"/>

    <View
        android:id="@+id/view_difficulty_1"
        android:layout_width="@dimen/record_difficulty_width"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/record_difficulty_end_margin"
        android:layout_marginRight="@dimen/record_difficulty_end_margin"
        app:layout_constraintBottom_toBottomOf="@id/text_record_label_1"
        app:layout_constraintEnd_toStartOf="@id/guideline_score"
        app:layout_constraintTop_toTopOf="@id/text_record_label_1" />

    <View
        android:id="@+id/view_difficulty_2"
        android:layout_width="@dimen/record_difficulty_width"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/record_difficulty_end_margin"
        android:layout_marginRight="@dimen/record_difficulty_end_margin"
        app:layout_constraintBottom_toBottomOf="@id/text_record_label_2"
        app:layout_constraintEnd_toStartOf="@id/guideline_score"
        app:layout_constraintTop_toTopOf="@id/text_record_label_2" />

    <View
        android:id="@+id/view_difficulty_3"
        android:layout_width="@dimen/record_difficulty_width"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/record_difficulty_end_margin"
        android:layout_marginRight="@dimen/record_difficulty_end_margin"
        app:layout_constraintBottom_toBottomOf="@id/text_record_label_3"
        app:layout_constraintEnd_toStartOf="@id/guideline_score"
        app:layout_constraintTop_toTopOf="@id/text_record_label_3" />

    <View
        android:id="@+id/view_difficulty_4"
        android:layout_width="@dimen/record_difficulty_width"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/record_difficulty_end_margin"
        android:layout_marginRight="@dimen/record_difficulty_end_margin"
        app:layout_constraintBottom_toBottomOf="@id/text_record_label_4"
        app:layout_constraintEnd_toStartOf="@id/guideline_score"
        app:layout_constraintTop_toTopOf="@id/text_record_label_4" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/guideline_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left"
        app:constraint_referenced_ids="text_record_song_base,text_record_song_1,text_record_song_2,text_record_song_3,text_record_song_4"/>

    <TextView
        android:id="@+id/text_record_song_base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/content_padding_large"
        android:layout_marginRight="@dimen/content_padding_large"
        android:text="999,990 (5555 EX)"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_record_label_1"
        tools:text="995,367 (420 EX)" />

    <TextView
        android:id="@+id/text_record_song_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/content_padding_large"
        android:layout_marginRight="@dimen/content_padding_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_record_label_1"
        tools:text="995,367 (420 EX)" />

    <TextView
        android:id="@+id/text_record_song_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/text_record_song_1"
        app:layout_constraintTop_toTopOf="@id/text_record_label_2"
        tools:text="995,367 (420 EX)" />

    <TextView
        android:id="@+id/text_record_song_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/text_record_song_1"
        app:layout_constraintTop_toTopOf="@id/text_record_label_3"
        tools:text="995,367 (420 EX)" />

    <TextView
        android:id="@+id/text_record_song_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/text_record_song_1"
        app:layout_constraintTop_toTopOf="@id/text_record_label_4"
        tools:text="995,367 (420 EX)" />

</androidx.constraintlayout.widget.ConstraintLayout>