<?xml version="1.0" encoding="utf-8"?>
<com.perrigogames.life4trials.view.TrialItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_width="200dp">

    <include
        android:id="@+id/image_rank"
        layout="@layout/view_trial_jacket"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/content_padding_med"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorAccent"/>

    <ImageView
        android:id="@+id/image_new"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:rotation="-90"
        android:src="@drawable/triangle_new"
        app:layout_constraintBottom_toBottomOf="@id/text_new"
        app:layout_constraintEnd_toEndOf="@id/text_new"/>
    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_new"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:fontFamily="@font/avenir"
        android:gravity="center"
        android:rotation="-45"
        android:text="@string/new_tag"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:lines="1"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/image_rank"
        app:layout_constraintEnd_toEndOf="@id/image_rank"/>
</com.perrigogames.life4trials.view.TrialItemView>