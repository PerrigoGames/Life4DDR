<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimaryDark">@android:color/white</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/difficultyExpert</item>
    </style>

    <!-- Buttons -->
    <style name="BottomProgressButton">
        <item name="android:background">@drawable/button_normal_x</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="BottomProgressButtonLeftBorder" parent="BottomProgressButton">
        <item name="android:background">@drawable/button_div_l_x</item>
    </style>

    <style name="BottomProgressButtonRightBorder" parent="BottomProgressButton">
        <item name="android:background">@drawable/button_div_r_x</item>
    </style>

    <style name="BottomProgressButtonLeftRightBorder" parent="BottomProgressButton">
        <item name="android:background">@drawable/button_div_lr_x</item>
    </style>

</resources>
